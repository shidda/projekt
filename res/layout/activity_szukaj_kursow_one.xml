<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PSP" >

    <Button
        android:id="@+id/aktualnosci"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plan"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/przegladaj"
        android:text="Aktualności" />

    <Button
        android:id="@+id/przegladaj"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plan"
        android:layout_toLeftOf="@+id/aktualnosci"
        android:text="Przeglądaj kursy" />

    <Button
        android:id="@+id/plan"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mapa"
        android:layout_alignBottom="@+id/mapa"
        android:layout_alignLeft="@+id/przegladaj"
        android:text="Plan zajęć" />

    <Button
        android:id="@+id/mapa"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aktualnosci"
        android:layout_alignParentBottom="true"
        android:text="Menu" />

    <Button
        android:id="@+id/nastepne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aktualnosci"
        android:layout_alignLeft="@+id/przegladaj"
        android:layout_alignRight="@+id/aktualnosci"
        android:text="Następne" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Oddział"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/oddzial"
        android:text="Nazwa kursu"
        android:textSize="19sp" />

    <Spinner
        android:id="@+id/oddzial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/TextView03" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_alignRight="@+id/checkBox2"
        android:layout_centerVertical="true"
        android:text="Pełne grupy" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nastepne"
        android:layout_alignLeft="@+id/nastepne"
        android:layout_alignRight="@+id/przegladaj"
        android:text="Grupy zablokowane" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nastepne"
        android:layout_alignLeft="@+id/checkBox3"
        android:text="Tylko dla kobiet" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aktualnosci"
        android:layout_centerVertical="true"
        android:text="Tylko dla mężczyzn" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignLeft="@+id/checkBox3"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_below="@+id/TextView04"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignLeft="@+id/TextView04"
        android:text="Kod grupy"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignParentTop="true"
        android:text="Wybierz opcje"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/TextView02"
        android:text="Prowadzący"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/checkBox1"
        android:layout_below="@+id/TextView03"
        android:text="Ukryj:"
        android:textSize="19sp" />

</RelativeLayout>