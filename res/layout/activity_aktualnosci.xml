<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PSP" 
    
    >


    <Button
        android:id="@+id/aktualnosci"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plan"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/przegladaj"
        android:text="Aktualności" />

    <Button
        android:id="@+id/mapa"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aktualnosci"
        android:layout_alignParentBottom="true"
        android:text="Mapa" />

    <Button
        android:id="@+id/przegladaj"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plan"
        android:layout_toLeftOf="@+id/aktualnosci"
        android:text="Przeglądaj kursy" />

    <Button
        android:id="@+id/plan"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mapa"
        android:layout_alignBottom="@+id/mapa"
        android:layout_alignLeft="@+id/przegladaj"
        android:text="Plan zajęć" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="sfsdfsdfs" >

        <requestFocus />
    </EditText>

</RelativeLayout>