<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PSP" >

    <Button
        android:id="@+id/aktualnosci"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plan"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/przegladaj"
        android:text="Aktualności" />

    <Button
        android:id="@+id/przegladaj"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/plan"
        android:layout_toLeftOf="@+id/aktualnosci"
        android:text="Przeglądaj kursy" />

    <Button
        android:id="@+id/plan"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mapa"
        android:layout_alignBottom="@+id/mapa"
        android:layout_alignLeft="@+id/przegladaj"
        android:text="Plan zajęć" />

    <Button
        android:id="@+id/mapa"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aktualnosci"
        android:layout_alignParentBottom="true"
        android:text="Menu" />

    <Button
        android:id="@+id/dodaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aktualnosci"
        android:layout_alignLeft="@+id/przegladaj"
        android:layout_alignRight="@+id/aktualnosci"
        android:text="Dodaj" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Dzien tygodnia"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/spinDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignTop="@+id/TextView03"
        android:layout_toRightOf="@+id/TextView03" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView03"
        android:text="Czas trwania"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:text="Od"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignBaseline="@+id/TextView04"
        android:layout_alignBottom="@+id/TextView04"
        android:layout_toRightOf="@+id/spinOdGodz"
        android:text=":"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/spinOdGodz"
        android:text="Sala"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignBaseline="@+id/TextView07"
        android:layout_alignBottom="@+id/TextView07"
        android:layout_alignLeft="@+id/aktualnosci"
        android:text="Budynek"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView07"
        android:layout_alignRight="@+id/przegladaj"
        android:layout_below="@+id/TextView07"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView08"
        android:layout_below="@+id/TextView08"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:text="Prowadzacy"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView09"
        android:layout_alignRight="@+id/editText2"
        android:layout_centerVertical="true"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/TextView01"
        android:layout_toRightOf="@+id/spinDoGodz"
        android:text=":"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/spinDoGodz"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_alignTop="@+id/spinOdMin"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/TextView04"
        android:textSize="1dip" />

    <Spinner
        android:id="@+id/spinOdGodz"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/TextView07"
        android:textSize="1dip" />

    <Spinner
        android:id="@+id/spinOdMin"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_alignTop="@+id/spinOdGodz"
        android:layout_toRightOf="@+id/TextView09"
        android:textSize="1dip" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_above="@+id/TextView08"
        android:layout_toLeftOf="@+id/TextView08"
        android:text="do"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/spinDoMin"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_alignTop="@+id/spinDoGodz"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/TextView08"
        android:textSize="1dip" />

</RelativeLayout>