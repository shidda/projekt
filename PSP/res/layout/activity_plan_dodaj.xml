<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PSPActivity" 
    android:background="#3f374f">

    <Button
        android:id="@+id/plan_dodaj_menu"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/plan_dodaj_usun"
        android:layout_alignParentBottom="true"
        android:background="#9996A7"
        android:textSize="30sp"
        android:text="Menu" />

    <Button
        android:id="@+id/plan_dodaj_anuluj"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#9996A7"
        android:textSize="30sp"
        android:text="Anuluj" />

    <Button
        android:id="@+id/plan_dodaj_dodaj"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_above="@+id/plan_dodaj_menu"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/plan_dodaj_anuluj"
        android:layout_marginBottom="21dp"
        android:background="#9996A7"
        android:text="Dodaj"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spinDoMin"
        android:layout_width="50sp"
        android:layout_height="45sp"
        android:layout_alignBottom="@+id/TextView06"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/TextView06"
        android:textSize="1dip" />

    <TextView
        android:id="@+id/kursy_kodKursu"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/sala"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Budynek"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignBottom="@+id/spinDoGodz"
        android:layout_toRightOf="@+id/spinDoGodz"
        android:text=":"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="DzieÅ„ tygodnia"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinOdGodz"
        android:layout_alignRight="@+id/sala"
        android:layout_below="@+id/TextView03" />

    <TextView
        android:id="@+id/nauczyciel"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/spinDni"
        android:text="Czas trwania"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinOdMin"
        android:layout_centerHorizontal="true"
        android:text="do"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/prowadzacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etbudynek"
        android:layout_alignRight="@+id/etbudynek"
        android:layout_below="@+id/TextView09"
        android:background="#9996A7"
        android:ems="10" />

    <EditText
        android:id="@+id/kurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prowadzacy"
        android:layout_alignRight="@+id/prowadzacy"
        android:layout_below="@+id/TextView10"
        android:background="#9996A7"
        android:ems="10" />

    <EditText
        android:id="@+id/etTypZajec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/kurs"
        android:layout_below="@+id/kursy_kodGrupy"
        android:layout_toRightOf="@+id/TextView02"
        android:background="#9996A7"
        android:ems="10" />

    <Spinner
        android:id="@+id/spinOdMin"
        android:layout_width="50sp"
        android:layout_height="45sp"
        android:layout_alignRight="@+id/plan_dodaj_menu"
        android:layout_alignTop="@+id/spinDoGodz"
        android:textSize="1dip" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView06"
        android:layout_alignBottom="@+id/TextView06"
        android:layout_toLeftOf="@+id/nauczyciel"
        android:text=":"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinOdGodz"
        android:layout_marginRight="29dp"
        android:layout_toLeftOf="@+id/spinOdGodz"
        android:text="Od"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinDoGodz"
        android:layout_width="50sp"
        android:layout_height="45sp"
        android:layout_below="@+id/nauczyciel"
        android:layout_toRightOf="@+id/TextView07"
        android:textSize="1dip" />

    <Spinner
        android:id="@+id/spinOdGodz"
        android:layout_width="50sp"
        android:layout_height="45sp"
        android:layout_below="@+id/nauczyciel"
        android:layout_toLeftOf="@+id/TextView05"
        android:textSize="1dip" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/TextView04"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Sala"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etbudynek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kursy_kodKursu"
        android:layout_toRightOf="@+id/TextView02"
        android:background="#9996A7"
        android:ems="10"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/sala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/etbudynek"
        android:layout_below="@+id/TextView07"
        android:layout_toRightOf="@+id/TextView02"
        android:background="#9996A7"
        android:ems="10"
       />

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignRight="@+id/TextView10"
        android:layout_below="@+id/etbudynek"
        android:layout_marginTop="23dp"
        android:text="Prowadzacy"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView10"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignLeft="@+id/spinOdMin"
        android:layout_below="@+id/prowadzacy"
        android:layout_marginTop="26dp"
        android:text="Nazwa kursu"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/kursy_kodGrupy"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/kurs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Typ Zajec"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>