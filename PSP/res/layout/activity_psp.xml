<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PSPActivity" 
    android:background="#3f374f">

    <Button
        android:id="@+id/mapa"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/plan"
        android:layout_alignBottom="@+id/plan"
        android:layout_alignParentRight="true"
        android:background="#9996A7"
        android:text="Mapa"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/kursy_kodGrupy"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/przegladaj"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="199dp"
        android:text="Witaj! To jest program PSP (Pomocnik Studenta Politechniki), który pomaga wszystkim studentom Politechniki Wrocławskiej. Wybierz interesującą Cię opcję."
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <Button
        android:id="@+id/aktualnosci"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/przegladaj"
        android:background="#9996A7"
        android:text="Aktualności"
        android:textSize="30sp" />

    <Button
        android:id="@+id/plan"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#9996A7"
        android:text="Plan zajęć"
        android:textSize="30sp" />

    <Button
        android:id="@+id/przegladaj"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_above="@+id/plan"
        android:layout_alignLeft="@+id/plan"
        android:layout_marginBottom="21dp"
        android:background="#9996A7"
        android:text="Przeglądaj kursy"
        android:textSize="30sp" />

</RelativeLayout>