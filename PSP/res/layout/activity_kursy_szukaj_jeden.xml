<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PSPActivity" 
    android:background="#3f374f">

    <Button
        android:id="@+id/wyszukaj"
        android:layout_width="275dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#9996A7"
        android:text="Następne"
        android:textSize="35sp" />

    <CheckBox
        android:id="@+id/kursy_szukaj_jeden_dlaMezczyzn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/kursy_szukaj_jeden_pelneGrupy"
        android:layout_alignBottom="@+id/kursy_szukaj_jeden_pelneGrupy"
        android:layout_marginLeft="82dp"
        android:layout_toRightOf="@+id/kursy_szukaj_jeden_grupyZablokowane"
        android:text="Tylko dla mężczyzn"
 
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/kursy_szukaj_jeden_menu"
        android:layout_width="275dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#9996A7"
        android:text="Menu" 
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/skad"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="21dp"
        android:text="Wybierz opcje"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    <CheckBox
        android:id="@+id/kursy_szukaj_jeden_dlaKobiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/kursy_szukaj_jeden_grupyZablokowane"
        android:layout_alignBottom="@+id/kursy_szukaj_jeden_grupyZablokowane"
        android:layout_alignLeft="@+id/kursy_szukaj_jeden_dlaMezczyzn"
        android:text="Tylko dla kobiet" 
       android:textColor="#FFFFFF"
       android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/kursy_szukaj_jeden_grupyZablokowane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kursy_szukaj_jeden_pelneGrupy"
        android:layout_below="@+id/kursy_szukaj_jeden_pelneGrupy"
        android:text="Grupy zablokowane"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/oddzial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kursy_szukaj_jeden_kurs"
        android:layout_alignRight="@+id/kursy_szukaj_jeden_kurs"
        android:layout_below="@+id/nauczyciel" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/oddzial"
        android:layout_centerHorizontal="true"
        android:text="Nazwa kursu"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/prowadzacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kursy_szukaj_jeden_kurs"
        android:layout_alignRight="@+id/kursy_szukaj_jeden_kurs"
        android:layout_below="@+id/TextView04"
        android:background="#9996A7"
        android:ems="10" />

    <EditText
        android:id="@+id/kursy_szukaj_jeden_kurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView02"
        android:layout_centerHorizontal="true"
        android:ems="10" 
        android:background="#9996A7"/>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/prowadzacy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Kod grupy"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/kursy_szukaj_jeden_grupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prowadzacy"
        android:layout_alignRight="@+id/prowadzacy"
        android:layout_below="@+id/TextView03"
        android:background="#9996A7"
        android:ems="10" />

    <TextView
        android:id="@+id/nauczyciel"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/skad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Oddział"
        android:textSize="20sp" 
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignRight="@+id/TextView02"
        android:layout_below="@+id/kursy_szukaj_jeden_kurs"
        android:layout_marginTop="23dp"
        android:text="Prowadzący"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/kursy_szukaj_jeden_pelneGrupy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView05"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/kursy_szukaj_jeden_grupa"
        android:text="Pełne grupy" 
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>
=
    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/kursy_szukaj_jeden_grupa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="Ukryj:"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>